# إعدادات خدمة الشكاوى - مشروع نائبك

# إعدادات Django الأساسية
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# إعدادات قاعدة البيانات
DB_NAME=naebak_complaints
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# إعدادات خدمة الشكاوى
MAX_COMPLAINTS_PER_DAY=5
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_COMPLAINT=10
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif
AUTO_ASSIGN_ENABLED=True
REQUIRE_PHONE_VERIFICATION=True
SEND_EMAIL_NOTIFICATIONS=True

# إعدادات البريد الإلكتروني
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@naebak.com

# إعدادات Redis (اختيارية)
USE_REDIS=False
REDIS_URL=redis://localhost:6379/1

# إعدادات Celery (اختيارية)
USE_CELERY=False
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# إعدادات التخزين السحابي (اختيارية)
USE_CLOUD_STORAGE=False
GS_BUCKET_NAME=naebak-complaints
GS_PROJECT_ID=your-gcp-project-id
GS_CREDENTIALS=path/to/credentials.json

# إعدادات المراقبة (اختيارية)
SENTRY_DSN=your-sentry-dsn

# إعدادات خدمات أخرى
AUTH_SERVICE_URL=http://localhost:8001
MESSAGING_SERVICE_URL=http://localhost:8003
ADMIN_SERVICE_URL=http://localhost:8004

# إعدادات JWT
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=86400
